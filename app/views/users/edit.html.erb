<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

 <div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h2>User info</h2>
       <%= form_with model: @user do |f| %>

  <div class="form-group">
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName" %>
  </div>
  <div class="form-group">
  <label for="inputImage">Image</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <label for="inputImage">
  </div>
  <div class="form-group">
  <label for="user_introduction">Introduction</label>
  <%= f.text_field :introduction, autofocus: true, id:"inputintroduction" %>
  </div>


  <%= f.submit "Update User" %>
<% end %>
      </div>
    </div>
</div>
