<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table class="table">
       <%=link_to "グループを作成する",new_group_path %> | 
       <%=link_to "グループ一覧",groups_path %>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100,100) %></td>
              <td><%= user.name %></td>
              <td>フォロー<%= user.followers.count %></td>
              <td>フォロワー<%= user.followeds.count %></td>
              <td><%= render  "relationships/btn",  user: user %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>