<div>
  <%= flash[:notice] %>
</div>

<div class="container px-5 px-sm-0">
  <div class="row">
      <div class="col-md-3">
        <%= render 'books/list', user: @user, book: @book %>
      </div>
  <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th><%= image_tag @book_new.user.get_profile_image(100,100) %></th>
      <th><%= link_to book_path(@book_new.id) do %>
        <%= @book_new.title %><% end %></th>
      
      <th><%= @book_new.body %></th>
      <th><%= link_to "Edit", edit_book_path(@book_new.id), class: "btn btn-sm btn-success edit_book_98184" %></th>
      <th><%= link_to "Destroy", book_path(@book_new.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger destroy_book_98184" %></th>

    </tr>
  </thead>
  </table>
  </div>
  </div>
  </div>
    