<div>
  <%= flash[:notice] %>
</div>

<div class="container px-5 px-sm-0">
  <div class="row">
      <div class="col-md-3">
        <%= render 'books/list', user: @user, book: @book %>
      </div>
  <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>

            <td><%= link_to user_path(@book_new.id) do %>
                <%= image_tag @user.get_profile_image(80, 80) %>
                <% end %><br>
                <%= link_to user_path(@book_new.id) do %>
                <%= @user.name %>
                <% end %>
            </td>
            <td>
                <%= link_to book_path(@book_new.id) do %>
                <%= @book_new.title %>
                 <% end %>
            </td>
            <td><%= @book_new.body %></td>
                <% if @book_new.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@book_new.id), class: "btn btn-sm btn-success" %></td>
            <td>
                <%= link_to "Destroy", book_path(@book_new.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %>
            </td>
                <% else %>
                  <td></td>
                  <td></td>
           <% end %>


          </tr>
        </tbody>
      </table>
  </div>
  </div>
  </div>
