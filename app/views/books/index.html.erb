<h1>New book</h1>
<%= form_with model: @book do |f| %>
  
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>


<% @books.each do |book| %>

<h2>title</h2>

<p><%= book.title %></p>

<h2>Body</h2>

<p><%= book.body %></p>

<%= link_to "Edit", edit_book_path(book.id) %>

<%= link_to "Back", books_path %>

<% end %>